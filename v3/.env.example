# ============================================================================
# Discord Bot Configuration
# ============================================================================
BOT_API_KEY=your_discord_bot_token_here

# ============================================================================
# LLM Provider Selection
# ============================================================================
# Options: "anthropic" (Claude) or "openai" (OpenAI-compatible local LLMs)
LLM_PROVIDER=anthropic
MAX_TOKENS=1024

# ============================================================================
# Anthropic (Claude) Configuration
# ============================================================================
# Required when LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-your_api_key_here
MODEL_NAME=claude-haiku-4-5
SUBAGENT_MODEL_NAME=claude-haiku-4-5
WEB_SEARCH_MAX_TOKENS=1024

# ============================================================================
# OpenAI-Compatible Configuration (for local LLMs)
# ============================================================================
# Required when LLM_PROVIDER=openai
# Works with: LM Studio, Ollama, vLLM, LocalAI, text-generation-webui, etc.

# Most local LLM servers don't require real API keys
OPENAI_API_KEY=not-needed

# Base URL for your local LLM server
# LM Studio default: http://localhost:1234/v1
# Ollama with openai-compatibility: http://localhost:11434/v1
# vLLM: http://localhost:8000/v1
OPENAI_BASE_URL=http://localhost:1234/v1

# Model name/identifier used by your local server
# For LM Studio: Use the exact model name shown in the UI
# For Ollama: Use format like "llama2:latest" or "mistral:latest"
# For vLLM: Use the model name specified when starting the server
OPENAI_MODEL_NAME=local-model

# ============================================================================
# Discord Permissions
# ============================================================================
# JSON arrays of Discord IDs (as strings)

# Channels where the bot can respond to @mentions
ALLOWED_CHANNELS=[]
# Example: ALLOWED_CHANNELS=["123456789012345678", "987654321098765432"]

# Roles that can use the bot in any channel
ALLOWED_ROLES=[]
# Example: ALLOWED_ROLES=["123456789012345678"]

# Users who can use the bot regardless of channel/role restrictions
OVERRIDE_USERS=[]
# Example: OVERRIDE_USERS=["123456789012345678"]

# Forum channels where the bot will auto-reply to new posts
ALLOWED_FORUM_CHANNELS=[]
# Example: ALLOWED_FORUM_CHANNELS=["123456789012345678"]

# Servers/Guilds where all members can use the bot
AUTHORIZED_SERVERS=[]
# Example: AUTHORIZED_SERVERS=["123456789012345678"]

# ============================================================================
# Feature Flags
# ============================================================================
# Auto-reply to new forum posts in ALLOWED_FORUM_CHANNELS
FORUM_REPLIES_ENABLED=false

# Auto-reply when messages match configured regex patterns
REGEX_REPLIES_ENABLED=false

# ============================================================================
# GitHub Integration (for prompt syncing)
# ============================================================================
# If configured, the bot will periodically fetch system prompts from GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=owner/repo
GITHUB_BRANCH=main

# How often to check for prompt updates (in seconds)
PROMPT_POLL_INTERVAL=300

# ============================================================================
# Wolfram Alpha Configuration
# ============================================================================
# Required for the wolfram tool to perform computational queries
WOLFRAM_APPID=your_wolfram_appid_here
# Maximum characters to return from Wolfram Alpha API (default: 8000)
WOLFRAM_MAX_CHARS=1024

# ============================================================================
# Logging
# ============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_LEVEL=INFO

# ============================================================================
# Image Processing Configuration
# ============================================================================
# Maximum dimensions (width/height) for image resizing in pixels (default: 800)
IMAGE_MAX_DIMENSIONS=800

# Maximum file size for image uploads in MB (default: 20)
IMAGE_MAX_FILE_SIZE_MB=20

# ============================================================================
# YouTube Transcript Configuration
# ============================================================================
# Total characters of transcript to include (split evenly between start and end)
# Default: 4000 (2000 chars from beginning + 2000 chars from end)
YOUTUBE_TRANSCRIPT_MAX_CHARS=4000
